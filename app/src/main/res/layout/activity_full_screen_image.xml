<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FullScreenImage">

    <include layout="@layout/toolbar"
        android:id="@+id/fullimageview_activity_toolbar"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fullimageview_activity_toolbar"
        android:layout_marginTop="0dp">


        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/fullphoto_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <ProgressBar
            android:id="@+id/fullimageview_progress"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:indeterminateTint="#E12196F3"
            android:background="@color/Transpirant"

            />

    </FrameLayout>


</RelativeLayout>