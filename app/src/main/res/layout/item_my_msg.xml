<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:clipToPadding="false">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/My_MSGprofile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="0dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_male"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />


    <LinearLayout
        android:id="@+id/my_msg_item_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_toStartOf="@+id/My_MSGprofile_image"
        android:gravity="right"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/my_message"

            >

            <TextView
                android:id="@+id/my_message_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginRight="4dp"

                android:padding="10dp"
                android:text="Placeholder message"
                android:textColor="#fff"
                android:textSize="18sp"

                tools:ignore="RtlHardcoded" />


            <ImageView
                android:id="@+id/my_msg_image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="5dp"

                />

        </FrameLayout>



        <TextView
            android:id="@+id/mytimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="13dp"
            android:text="timestamp"

            android:textSize="10dp">

        </TextView>

    </LinearLayout>




</RelativeLayout>