<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/chatbox_bottom_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/chatbox_popup_background"
    android:weightSum="3"
    android:padding="5dp"
    >

    <ImageButton
        android:id="@+id/add_photo_from_cam"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:src="@drawable/ic_add_a_photo_cam_24px"
        android:layout_weight="1"
        android:background="@color/Transpirant"
        />

    <ImageButton
        android:id="@+id/add_photo_from_gallery"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:src="@drawable/ic_add_a_photo_24px"
        android:layout_weight="1"
        android:background="@color/Transpirant"

        />

    <ImageButton
        android:id="@+id/add_multiple_photos"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:src="@drawable/ic_add_m_photos_24px"
        android:layout_weight="1"
        android:background="@color/Transpirant"


        />
</LinearLayout>